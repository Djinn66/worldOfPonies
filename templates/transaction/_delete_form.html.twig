<form method="post" action="{{ path('transaction_delete', {'transactionId': transaction.transactionId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.transactionId) }}">
    <button class="btn">Delete</button>
</form>
