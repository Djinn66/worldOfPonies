<form method="post" action="{{ path('advertisement_delete', {'advertisementId': advertisement.advertisementId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ advertisement.advertisementId) }}">
    <button class="btn">Delete</button>
</form>
