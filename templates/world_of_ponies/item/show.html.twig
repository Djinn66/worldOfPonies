{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}

{% block body %}
    {% if (is_granted('ROLE_PROGRAMMER') or is_granted('ROLE_SUPERUSER')) %}
        <h1>Item</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ItemId</th>
                    <td>{{ item.itemId }}</td>
                </tr>
                <tr>
                    <th>ItemLvl</th>
                    <td>{{ item.itemLvl }}</td>
                </tr>
                <tr>
                    <th>ItemDescription</th>
                    <td>{{ item.itemDescription }}</td>
                </tr>
                <tr>
                    <th>ItemPrice</th>
                    <td>{{ item.itemPrice }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('world_of_ponies_item_index') }}">back to list</a>

        <a href="{{ path('world_of_ponies_item_edit', {'itemId': item.itemId}) }}">edit</a>

        {{ include('world_of_ponies/item/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
