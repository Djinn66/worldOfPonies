{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    {% if (is_granted('ROLE_PROGRAMMER') or is_granted('ROLE_SUPERUSER')) %}

        <h1>Article</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>ArticleId</th>
                    <td>{{ article.articleId }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ article.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ article.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ article.image }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('world_of_ponies_article_index') }}">back to list</a>

        <a href="{{ path('world_of_ponies_article_edit', {'articleId': article.articleId}) }}">edit</a>

        {{ include('world_of_ponies/article/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
