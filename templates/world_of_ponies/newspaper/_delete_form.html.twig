<form method="post" action="{{ path('world_of_ponies_newspaper_delete', {'newspaperId': newspaper.newspaperId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ newspaper.newspaperId) }}">
    <button class="btn">Delete</button>
</form>
